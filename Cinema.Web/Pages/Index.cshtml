@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    int i = 1;
}

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1>DOCTOR SLEEP</h1>
                    <p>Release: 6 Novemeber 2019</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="showing-now">
    <div class="container">
        <h1 class="h2 section-title text-center">Cooming Soon</h1>
        <div class="row flex-row">

            @foreach (var item in Model.Screenings)
            {
                if (@i > 4)
                    break;
                <div class="col-md-3 flex-column">
                    <div class="movie-box">
                        <img class="img-responsive" src="~/img/placehold.png" />
                        <div class="movie-box_content">
                            <h3 class="h5">@item.Movie.Title</h3>
                            <p>@item.Movie.Actors</p>
                            <small class="text-muted"><strong>Coming on @item.DateAndTime.ToString("dd MMM yyyy")</strong></small>
                        </div>
                    </div>

                </div>
                i++;
            }

        </div>
    </div>
</section>

