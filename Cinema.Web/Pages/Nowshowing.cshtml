@page
@model Cinema.Web.Pages.NowshowingModel
@{
    ViewData["Title"] = "Nowshowing";
}

<h1>Now showing</h1>

<section class="showing-now">
    <div class="container">
        @foreach (var item in Model.NowShowingMovies.GroupBy(x => x.Movie.Title).Select(y => y.First()).ToList())
        {

            <div class="screening">
                <div class="col-md-3 col-sm-3 col-xs-12 screening-image">
                    <a href="/case-studies/selling-your-amazon-business">
                        <img src="~/img/placehold.png" class="img-responsive center-block" alt="@item.Movie.Title">
                    </a>
                </div>
                <div class="col-md-9 col-sm-9 col-xs-10 col-sm-offset-0 col-xs-offset-1 case-study-text">
                    <h3>
                        <a href="/screening/@item.Id/details">@item.Movie.Title</a>
                    </h3>
                    <p>@item.Movie.Actors</p>
                    <hr>
                    <div class="row">
                        <div class="col-md-4 col-xs-7">
                            <strong>Hall</strong><br>
                            @item.Hall.Name
                        </div>
                        <div class="col-md-4 col-xs-5">
                            <strong>Time</strong><br>
                            @item.DateAndTime
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <a href="#" class="btn btn-primary pull-right">Get Tickets</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>


