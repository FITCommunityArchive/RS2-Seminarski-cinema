@using Cinema.Domain.Entities.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    // we dont need these as we wont be implementing external logins
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<nav>
    <div class="nav nav-tabs flex-column flex-md-row shadow-soft border-soft" id="nav-tab" role="tablist">
        <a class="nav-item nav-link text-dark @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index"><i class="far fa-user mr-2"></i>Profile</a>
        <a class="nav-item text-dark nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email"><i class="far fa-list-alt mr-2"></i>Email</a>
        <a class="nav-item text-dark nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword"><i class="far fa-list-alt mr-2"></i>Password</a>
        <a class="nav-item text-dark nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication"><i class="far fa-list-alt mr-2"></i>Two-factor authentication</a>
        <a class="nav-item text-dark nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData"><i class="far fa-list-alt mr-2"></i>Personal data</a>
        <a class="nav-item text-dark nav-link @ManageNavPages.ReservationsNavClass(ViewContext)" id="reservations" asp-page="./Reservations"><i class="far fa-list-alt mr-2"></i>Reservations</a>
    </div>
</nav>