@model Cinema.DTO.ViewModels.Home.HomeContactVM
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section section-md section-image overlay-dark" data-background="/img/hero-2.jpg" style="background-image: url(/img/hero-2.jpg);">
    <div class="container">
        <div class="row mt-4 mt-lg-6 justify-content-center">
            <div class="col-md-10 col-lg-10">
                @if ((string)ViewData["SuccessMessage"] != "")
                {
                    <div class="alert alert-success" role="alert">
                        @ViewData["SuccessMessage"]
                    </div>
                }

                @if ((string)ViewData["ErrorMessage"] != "")
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                <!-- Contact Card -->
                <form asp-action="Contact" class="card shadow-sm border-light p-2 p-md-3 p-lg-5">
                    <div class="card-header">
                        <h4>Got a question or proposal?</h4>
                        <p>Cool! Let us know and we will get back to you in no time.</p>
                    </div>
                    <div class="card-body pt-0">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="far fa-user"></i></span></div>
                                <input class="form-control" placeholder="Your name" type="text" value="@((Model != null && Model.Name != "") ? Model.Name : "" )" name="Name" required="">

                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-at"></i></span></div>
                                <input class="form-control" placeholder="Email" type="email" value="@((Model != null && Model.Email != "") ? Model.Email : "" )" name="Email" required="">

                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" id="content" name="Content" placeholder="How can we help?" rows="3" required="">@((Model != null && Model.Content != "") ? Model.Content : "" )</textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer mx-4 px-0 pt-0">
                        <button type="submit" class="btn btn-block btn-primary animate-up-2">Send message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>