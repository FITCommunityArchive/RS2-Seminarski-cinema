@model Cinema.DTO.ViewModels.Reviews.ReviewIndexVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h5>Rate @Model.Movie.Name</h5>
                <h6>You already rated this movie! </h6>

                <div class="row">
                    <div class="col-md-12">
                        <form class="rating-form" asp-controller="Reviews" asp-action="Edit">
                            <input asp-for="ReviewId" hidden />
                            <input asp-for="Movie.Id" hidden />
                            <input asp-for="User.Id" hidden />
                            <div class="rating-uneditable">
                                @for (int i = 10; i > 0; i--)
                                {
                                    <input asp-for="Rating" type="radio" value="@i" id="@($"rating-star-{i}")" disabled><label for="@($"rating-star-{i}")"></label>
                                }
                            </div>
                        </form>
                    </div>
                </div>

                <a asp-controller="Reviews" asp-action="Edit" asp-route-reviewId="@Model.ReviewId" class="btn btn-info">Change rating</a>
            </div>
        </div>
    </div>
</section>

