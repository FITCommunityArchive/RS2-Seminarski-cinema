@model Cinema.DTO.ViewModels.Pricings.PricingCreateVM
@{
    ViewData["Title"] = "Edit";
}
<div class="section section-md" asp-roles="@Roles.Administrator">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Edit Pricing</h1>

                <div class="row">
                    <div class="col-12 col-lg-12">
                        <form enctype="multipart/form-data" method="post" class="card shadow-soft border p-4 mb-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" hidden/>
                            <div class="row">
                                <div class="col-12 col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control shadow-soft" id="Name" placeholder="Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Price" class="control-label"></label>
                                        <input asp-for="Price" class="form-control shadow-soft" id="Price" placeholder="Price" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>                            
                            <div class="row">
                                <div class="col">
                                    <button class="btn btn-primary btn-dark mt-2 animate-up-2" asp-action="Index">Back to list</button>
                                    <button type="submit" class="btn btn-primary btn-gray mt-2 animate-up-2">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
