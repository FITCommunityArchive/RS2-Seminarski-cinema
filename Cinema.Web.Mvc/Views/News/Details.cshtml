@model Cinema.DTO.ViewModels.News.NewsDetailsVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section section-md">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>News details</h1>

                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt class="col-sm-2">
                            Date and time created
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DateCreated) | @Html.DisplayFor(model => model.TimeCreated)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Type)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Type.Name)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Author)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Author.Name)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-primary btn-dark mt-2 animate-up-2">Back to List</a>
                    <a asp-authorize asp-roles="@Roles.ContentEditor,@Roles.Administrator" class="btn btn-primary btn-gray mt-2 animate-up-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a asp-authorize asp-roles="@Roles.ContentEditor,@Roles.Administrator" class="btn btn-primary btn-danger mt-2 animate-up-2" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>