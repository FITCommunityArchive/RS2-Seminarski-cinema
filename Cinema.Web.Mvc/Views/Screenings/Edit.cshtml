
@model Cinema.DTO.ViewModels.Screenings.ScreeningCreateVM

@{
    ViewData["Title"] = "Edit";
}
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Edit</h1>

                <h4>Screening</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="DateAndTime" class="control-label"></label>
                                <input asp-for="DateAndTime" class="form-control" />
                                <span asp-validation-for="DateAndTime" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label asp-for="Movie" class="control-label"></label>
                                <select asp-for="MovieId" class="form-control"
                                        asp-items="@Model.Movies"></select>
                                <span asp-validation-for="MovieId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Hall" class="control-label"></label>
                                <select asp-for="HallId" class="form-control"
                                        asp-items="@Model.Halls"></select>
                                <span asp-validation-for="HallId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
